-------------------------------------------------------------------
CREATE TABLE tbl_advance
(
	no INT PRIMARY KEY,
	team VARCHAR(1),
	name VARCHAR(10),
	point1 INT,
	point2 INT
)
GO
-------------------------------------------------------------------
CREATE TABLE tbl_allowance
(
	no INT PRIMARY KEY,
	name VARCHAR(10),
	overtime INT,
	travel INT,
	total INT
)
