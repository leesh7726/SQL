CREATE TABLE tbl_subjects
(
	id INT PRIMARY KEY,
	name VARCHAR(20),
	math INT,
	english INT
)
GO
-------------------------------------------------------------------
CREATE TABLE tbl_employee
(
	section VARCHAR(10),
	name VARCHAR(10)
)
GO
